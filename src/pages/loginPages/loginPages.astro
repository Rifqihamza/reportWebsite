<section>
  <div class="flex justify-center p-6">
    <form
      method="POST"
      action=""
      class="bg-white p-6 rounded-xl shadow-md shadow-gray-400"
    >
      <div
        class="px-4 py-3 bg-red-900 rounded-xl text-white flex flex-row items-center justify-between"
      >
        <!-- Label Login -->
        <div>
          <h1
            class="font-extrabold uppercase tracking-wider text-xl font-[codecFont]"
          >
            Login Form
          </h1>
          <p class="text-[14px]">Please Login First!</p>
        </div>
        <img src="/logoSekolah.png" class="w-12 h-auto" alt="" />
      </div>

      <!-- Username -->
      <div class="space-y-2 mt-6">
        <label for="username" class="font-bold"> Username </label>
        <input
          type="text"
          name="username"
          placeholder="Username..."
          class="mt-3 shadow-inner shadow-gray-300 rounded-md w-full px-4 py-3 outline-none focus:shadow-gray-600 transition-colors placeholder-black"
        />
      </div>

      <!-- Password -->
      <div class="space-y-2 mt-8">
        <label for="password" class="font-bold"> Passsword </label>
        <input
          type="password"
          name="password"
          placeholder="Password..."
          class="mt-3 shadow-inner shadow-gray-300 rounded-md w-full px-4 py-3 outline-none focus:shadow-gray-600 transition-colors placeholder-black"
        />
      </div>

      <!-- Login Button -->
      <div class="space-y-2 mt-8">
        <button
          type="submit"
          class="w-full uppercase tracking-[2px] font-bold px-6 py-3 bg-red-900 -translate-y-[10px] [box-shadow:0_10px_0_#d1c9b4] active:[box-shadow:0_5px_0_#d1c2b5] active:-translate-y-[5px] text-white rounded-xl"
          >Login</button
        >
      </div>
    </form>
  </div>
</section>
